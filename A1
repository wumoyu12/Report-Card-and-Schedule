import os.path
from os import path

def Menu():
    global option
    option = str(input("1.Add New Student\n2.Check Information\n3.Modify/Delete Information"))
    Checkoption()

    match option:
        case option if int(option) == 1:
            Add()
        case option if int(option) == 2:
            CheckInfo()
        case option if int(option) == 3:
            Change()

def Checkoption():
    optionlen = len(option)
    if optionlen != 1:
        print("Invalid")
        Menu()
    else:
        ordoption = ord(option)
        optionlist = list(option)
        for i in range(0,len(option)):
            newnum = ord(optionlist[i])
            if (newnum < 49 or newnum > 51):
                print("Invalid")
                Menu()
def AskID():
    global ID, filename
    ID = str(input("Please enter student ID:"))
    CheckID()
    filename = ID + ".txt"
    Checkfile()

def CheckID():
    IDlen = len(ID)
    if IDlen != 9:
        print("Invalid")
        AskID()
    else:
        for i in range(0,len(ID)):
            newnum = ord(ID[i])
            if (newnum < 48 or newnum > 57):
                print("Invalid")
                AskID()

def Checkfile():
    global ifexists
    ifexists = bool(path.exists(filename))

def Add():
    AskID()
    if ifexists == False:
        Askname()
        ScheAndReportC()
    else:
        print("This student has already been added.")
        print("The following is the student's information:")
        CheckInfo()

def Askname():
    global fullname
    Askfname()
    Asklname()
    fullname = fname + " " + lname
    print(fullname)

def Askfname():
    global fname, ifcorrect
    fname = str(input("Enter the student's first name."))
    fname = fname.upper()
    ifcorrect = fname
    Checkname(fname)
    #Back !
    if ifcorrect == "false":
        Askfname()
    else:
        fname = fname.capitalize()

def Asklname():
    global lname, ifcorrect
    lname = str(input("Enter the student's last name."))
    lname = lname.upper()
    ifcorrect = fname
    Checkname(lname)
    #Back !
    if ifcorrect == "false":
        Asklname()
    else:
        lname = lname.capitalize()

def Checkname(name):
    namelen = len(name)
    if namelen == 0:
        print("Invalid")
        #Back to Askname
        ifcorrect == "false"
        return ifcorrect
    else:
        namelist = list(name)
        for i in range (0, namelen):
            newname = ord(namelist[i])
            if newname < 65 or newname > 90:
                print("Invalid")
                #Back to Askname
                ifcorrect == "false"
                return ifcorrect

def ScheAndReportC():
    global addoption
    addoption = str(input("Do you like add Schedule(Enter 1) or Report Card(Enter 2)."))
    CheckAddOption()

    match addoption:
        case addoption if int(option) == 1:
            Schedule()
        case addoption if int(option) == 2:
            ReportCard()

def ReportCard():
    global howmany, CourseList, GradeList
    howmany = str(input("How many course do you want to enter(Maximum 8 courses)?"))
    Checkhowmany()
    count = int(howmany)
    CourseList = []
    GradeList = []
    while count != 0:
        AskCourse()
        Askgrade()

def AskCourse():
    global course
    course = str(input("Enter the course name."))
    Checkcourse()
    CourseList.append(course)

def Checkcourse():
    courselen = len(course)
    if courselen == 0:
        print("Invalid")
        AskCourse()
    else:
        courselist = list(course)
        for i in range (0, courselen):
            newcourse = ord(courselist[i])
            if newcourse < 65 or newcourse > 90:
                print("Invalid")
                AskCourse()

def Askgrade():
    global grade 
    grade = str(input("Enter the grade."))
    Checkgrade()

def Checkgrade():
    gradelen = len(grade)
    if gradelen == 0 or gradelen >= 4:
        print("Invalid")
        Askgrade()
    else:
        for i in range (0, gradelen):
            newnum = ord(grade[i])
            if (newnum < 48 or newnum > 57):
                print("Invalid")
                Askgrade()
    

def Checkhowmany():
    howmanylen = len(howmany)
    if howmanylen != 1:
        print("Invalid")
        ReportCard()
    else:
        ordoption = ord(howmany)
        howmanylist = list(howmany)
        for i in range(0,len(howmany)):
            newnum = ord(howmanylist[i])
            if (newnum < 49 or newnum > 56):
                print("Invalid")
                ReportCard()
    
def CheckAddOption():
    numlen = len(addoption)
    if numlen != 1:
        print("invalid")
        ScheAndReportC()
    else:
        ordoption = ord(option)
        optionlist = list(option)
        for i in range(0,len(option)):
            newnum = ord(optionlist[i])
            if (newnum < 49 or newnum > 50):
                print("Invalid")
                ScheAndReportC()

def CheckInfo():
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
    else:
        print("This student has not been added.")
        Menu()


def Change():
    global choice
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
        choice = str(input("1.Modify\n2.Delete all information about this student"))
        Checkchoice()
    else:
        print("This student has not been added.")
        Menu()

    match choice:
        case option if int(option) == 1:
            Modify()
        case option if int(option) == 2:
            Delete()

def Modify():
    print("Modify")

def Delete():
    os.remove(filename)

def Checkchoice():
    choicelen = len(choice)
    if choicelen != 1:
        print("Invalid")
        Change()
    else:
        ordoption = ord(choice)
        choicelist = list(choice)
        for i in range(0,len(choice)):
            newnum = ord(choicelist[i])
            if (newnum < 49 or newnum > 50):
                print("Invalid")
                Change()

def main():
    Menu()

if __name__ == "__main__":
    main()
